{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdEvent</th>
                <th>Name</th>
                <th>DateHourStart</th>
                <th>Duration</th>
                <th>DateLimitInscription</th>
                <th>NbInscriptionsMax</th>
                <th>InfosEvent</th>
                <th>ReasonCancellation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.idEvent }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.dateHourStart ? event.dateHourStart|date('Y-m-d H:i:s T') : '' }}</td>
                <td>{{ event.duration ? event.duration|date('H:i:s') : '' }}</td>
                <td>{{ event.dateLimitInscription ? event.dateLimitInscription|date('Y-m-d') : '' }}</td>
                <td>{{ event.NbInscriptionsMax }}</td>
                <td>{{ event.infosEvent }}</td>
                <td>{{ event.ReasonCancellation }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Create new</a>
{% endblock %}
