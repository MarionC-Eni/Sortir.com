{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Le détail de ma sortie</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %} <div class="alert-{{ label }}"> {{ message |raw }}
        </div>
        {% endfor %}
    {% endfor %}

    <table class="table">
        <tbody>
{#            <tr>#}
{#                <th>Id</th>#}
{#                <td>{{ event.id }}</td>#}
{#            </tr>#}
{#            <tr>#}
{#                <th>IdEvent</th>#}
{#                <td>{{ event.idEvent }}</td>#}
{#            </tr>#}
            <tr>
                <th>Intitulé</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date et heure d'inscription</th>
                <td>{{ event.dateHourStart ? event.dateHourStart|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ event.duration ? event.duration|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date limite d'inscription</th>
                <td>{{ event.dateLimitInscription ? event.dateLimitInscription|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre maximum d'inscrits</th>
                <td>{{ event.NbInscriptionsMax }}</td>
            </tr>
            <tr>
                <th>Informations complémentaires</th>
                <td>{{ event.infosEvent }}</td>
            </tr>
{#            <tr>#}
{#                <th>ReasonCancellation</th>#}
{#                <td>{{ event.ReasonCancellation }}</td>#}
{#            </tr>#}
            <tr>
                <th>Campus</th>
                <td>{{ event.schoolsite.name }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.locationevent.name }}</td>
            </tr>
            <tr>

                <th>Nom des inscrits</th>
                {% if event.userregistred is not null %}
                    <td>
{#                        je compte mon nombre d'inscrit#}
                        {% if event.userregistred.count() > 0 %}
                            {% for user in event.userregistred %}
                                {{ user.email }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        {% else %}
                            --non communiqué--
                        {% endif %}
                    </td>
                {% else %}
                    <td>--Pas d'inscrits--</td>
                {% endif %}



        </tbody>
    </table>



    {% if app.user and event.eventorgenazedby == app.user %}
<ul>
    <li><a href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a></li>
    {{ include('event/_delete_form.html.twig') }}

</ul>

    {% else %}
<ul>
<li><a href="{{ path('app_event_index') }}">Retour aux sorties</a></li>
<li><a href="{{ path('app_subscription', {'eventId': event.id}) }}">S'inscrire</a></li>
        {#  creer un if pour supprimer le bouton se desinscrire si on n'est pas inscrit #}
        {#<li> <a href="{{ path('app_unsubscription', {'eventId': event.id}) }}">Se désinscrire</a></li>#}
    
</ul>
    {% endif %}


