            <td>{{ form_widget(form.username) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.firstname) }}</th>
            <td>{{ form_widget(form.firstname) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.phone) }}</th>
            <td>{{ form_widget(form.phone) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.email) }}</th>
            <td>{{ form_widget(form.email) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.mycampus) }}</th>
            <td>{{ form_widget(form.mycampus) }}</td>
        </tr>
